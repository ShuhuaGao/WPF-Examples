<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Fasetto.Word">
    <!--specify `font name` after #-->
    <!--relative pack URI-->
    <FontFamily x:Key="Lato-Black">/Fonts/#Lato Black</FontFamily>
    <FontFamily x:Key="Lato-BlackItalic">/Fonts/#Lato Black Italic</FontFamily>
    <FontFamily x:Key="Lato-Thin">/Fonts/#Lato Thin</FontFamily>
    <FontFamily x:Key="Lato-Hairline">/Fonts/#Lato Hairline</FontFamily>
    <FontFamily x:Key="Lato-Lightitalic">/Fonts/#Lato Light Italic</FontFamily>

    <Style TargetType="Control" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource Lato-Thin}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockBaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource Lato-Thin}"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}"/>

    <sys:Double x:Key="FontSizeSmall">14</sys:Double>
    <sys:Double x:Key="FontSizeRegular">20</sys:Double>
    <sys:Double x:Key="FontSizeLarge">30</sys:Double>
</ResourceDictionary>